
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.first.entity">
	<class name="Product" table="product">
		<id name="id" column="id">
			<generator class="identity">
				
			</generator>
		</id>
		
	
		<property name="name" column="name" type="String"></property>
        <property name="price" column="price" type="Integer"></property>
        <property name="description" column="description" type="String"></property>
		
	<!-- 	<!-- 映射 Student Address一对一关联 -->
		<one-to-one name="student" constrained="true"></one-to-one>
		constrained 默认值是false -->
	</class>
</hibernate-mapping>